{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://qutlas.com/schemas/qdf.json",
  "title": "Qutlas Design Format (QDF) v1.0",
  "type": "object",
  "properties": {
    "qdf_version": {
      "type": "string",
      "const": "1.0"
    },
    "doc_id": {
      "type": "string",
      "description": "Unique document identifier (UUID)"
    },
    "title": {
      "type": "string",
      "description": "Project or design title"
    },
    "author_id": {
      "type": "string",
      "description": "User ID of document author"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "modified_at": {
      "type": "string",
      "format": "date-time"
    },
    "operations": {
      "type": "array",
      "description": "Op-log: ordered list of geometry operations for deterministic replay",
      "items": {
        "type": "object",
        "properties": {
          "op_id": {
            "type": "string",
            "description": "Unique operation ID"
          },
          "type": {
            "type": "string",
            "enum": [
              "import_asset",
              "sketch_2d",
              "constraint",
              "extrude",
              "revolve",
              "boolean",
              "fillet",
              "chamfer",
              "mirror",
              "pattern",
              "apply_parameters"
            ]
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "payload": {
            "type": "object",
            "description": "Operation-specific data"
          },
          "hash": {
            "type": "string",
            "description": "SHA-256 of canonical JSON payload for determinism verification"
          },
          "parent_ops": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "IDs of parent operations (DAG dependencies)"
          }
        },
        "required": ["op_id", "type", "timestamp", "payload", "hash"]
      }
    },
    "geometry_refs": {
      "type": "array",
      "description": "References to imported or generated assets",
      "items": {
        "type": "object",
        "properties": {
          "ref_id": {
            "type": "string"
          },
          "asset_id": {
            "type": "string",
            "description": "S3 or storage reference"
          },
          "asset_type": {
            "type": "string",
            "enum": ["step", "iges", "stl", "ply", "obj"]
          },
          "hash": {
            "type": "string",
            "description": "Hash of imported asset for integrity"
          }
        },
        "required": ["ref_id", "asset_id", "hash"]
      }
    },
    "parameters": {
      "type": "object",
      "description": "Named parameters for parametric design (variant configuration)",
      "properties": {
        "param_name": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "enum": ["number", "string", "boolean"]
            },
            "value": {},
            "min": {
              "type": "number"
            },
            "max": {
              "type": "number"
            },
            "step": {
              "type": "number"
            },
            "unit": {
              "type": "string"
            }
          }
        }
      }
    },
    "metadata": {
      "type": "object",
      "properties": {
        "tags": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "notes": {
          "type": "string"
        },
        "manufacturing_hints": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "collaborators": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "user_id": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "role": {
            "type": "string",
            "enum": ["owner", "editor", "viewer"]
          }
        }
      }
    }
  },
  "required": ["qdf_version", "doc_id", "operations"]
}
